<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_margin="15dp"
    android:elevation="6dp"
    android:background="@drawable/search_bar_background"
    android:id="@+id/individual_layout_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:civ_border_color="#000000"
                app:civ_border_width="2dp"
                android:src="@drawable/hoodie"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/individual_image"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/individual_dress_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="16dp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/individual_dress_Type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6989F9"
                    android:text="Type"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/type_image"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/sneakers"/>
</LinearLayout>