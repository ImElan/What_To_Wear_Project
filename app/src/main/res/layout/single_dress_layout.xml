<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_margin="15dp"
    android:elevation="6dp"
    android:background="@drawable/search_bar_background"
    android:id="@+id/individual_layout_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:civ_border_color="#000000"
                app:civ_border_width="2dp"
                android:src="@drawable/hoodie"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/individual_image"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/individual_dress_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="16dp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/individual_dress_Type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6989F9"
                    android:text="Type"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:id="@+id/individual_dress_Category"
                    android:textColor="#000000"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6989F9"
                    android:text="Category"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:id="@+id/individual_dress_climate"
                    android:textSize="16dp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6989F9"
                    android:text="Climate"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginStart="7dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_details"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:id="@+id/item_delete_id"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete_red"/>
    </LinearLayout>
</LinearLayout>